{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "process": "readonly"
  },
  "plugins": ["simple-import-sort", "import", "react"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "problems",
    "plugin:import/errors",
    "plugin:react/recommended",
    "prettier"
  ],
  "rules": {
    "simple-import-sort/sort": "error",
    "sort-imports": "off",
    "import/first": "error",
    "import/newline-after-import": "error",
    "import/no-duplicates": "error"
  },
  "overrides": [
    {
      "files": ["gatsby-*.js"],
      "env": {
        "browser": false,
        "node": true
      },
      "rules": {
        "simple-import-sort/sort": "off",
        "import/order": ["error", { "newlines-between": "always" }]
      }
    }
  ]
}
